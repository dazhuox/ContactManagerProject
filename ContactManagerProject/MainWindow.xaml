<Window x:Class="ContactManagerProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactManagerProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="LightGreen">
        <Button x:Name="AddContact" HorizontalAlignment="Center" Margin="0,380,0,0" VerticalAlignment="Top" Height="35" Width="92" Click="AddContactDoubleClick" Content="Add Contact"/>
        <Button x:Name="DeleteContact" HorizontalAlignment="Left" Margin="506,380,0,0" VerticalAlignment="Top" Height="35" Width="92"  Content="Delete Contact"/>
        <Button x:Name="UpdateContact" HorizontalAlignment="Left" Margin="206,380,0,0" VerticalAlignment="Top" Height="35" Width="92"  Content="Update Contact"/>

        <TextBox x:Name="Title" HorizontalAlignment="Left" Margin="26,19,0,0" TextWrapping="Wrap" Text="Contact Manager" VerticalAlignment="Top" Width="727" Height="33" TextChanged="TextBox_TextChanged"/>
        <DataGrid x:Name="ContactList" HorizontalAlignment="Left" Margin="26,84,0,0" VerticalAlignment="Top" Width="727" Height="283" AutoGenerateColumns="True">
            

        </DataGrid>


    </Grid>
</Window>
